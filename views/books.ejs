<%- include('partials/header.ejs'); -%>
<%if(locals.error_message){%>
    <%= error_message%>
<%}%>

 <%if(locals.username || locals.email){%>
    <div>
        <h1><%=username%></h1>
    </div>

    <%books.forEach(book => {%>
        <div>
            <h2>
                <p><%=book.title%></p>
            </h2>
        </div>
        <div>
            <p>
                <%=book.description%>
            </p>
        </div>
        <div>
            <p>
                <%=book.review%>
            </p>
        </div>
        <div>
            <p>
                <%=book.rating%>
            </p>
        </div>
        <div>
            <img src="<%=book.img_url%>"  alt="" name="img">
        </div>
    <%});%>
<%}%> 
<%- include('partials/footer.ejs'); -%>